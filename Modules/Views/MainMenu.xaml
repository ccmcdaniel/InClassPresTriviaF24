<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InClassPresTriviaF24.Modules.Views.MainMenu"
             Title="MainMenu">

    <Grid ColumnDefinitions="*, *">
        <Image Source="dotnet_bot.png"/>
        <BoxView Grid.Column="1" BackgroundColor="Black"/>
        <VerticalStackLayout Grid.Column="1" BackgroundColor="Black" HorizontalOptions="Center" VerticalOptions="Center"
                             Spacing="30">
            <Label Text="Presidential Trivia" FontSize="45" TextColor="Beige" BackgroundColor="Black"
                   FontFamily="Courier New" FontAttributes="Bold" TextDecorations="Underline"/>
            <Button Text="~  New Game  ~" FontSize="25" TextColor="Beige" BackgroundColor="Black" Clicked="NewGameClicked"/>
            <Button Text="~  Leaderboard  ~" FontSize="25" TextColor="Beige" BackgroundColor="Black" Clicked="LeaderboardsClicked"/>
            <Button Text="~  Exit Game  ~" FontSize="25" TextColor="Beige" BackgroundColor="Black" Clicked="ExitGameClicked"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>